<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="9dp"
            android:paddingStart="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:paddingStart="15dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/ll_custom_service"
                    style="@style/mine_collect_linear"
                    android:layout_marginEnd="45dp"
                    android:paddingBottom="18dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/custom_service" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_chat"
                    style="@style/mine_collect_linear"
                    android:paddingBottom="18dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chat" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="19dp"
                    android:layout_marginTop="30dp"
                    android:text="我的"
                    android:textColor="#061436"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_head"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/base_shape"
                android:paddingBottom="14dp"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingTop="16dp"
                app:layout_constraintBottom_toTopOf="@+id/cl_vip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_top">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:layout_constraintBottom_toBottomOf="@+id/civ_head"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/civ_head" />

                <TextView
                    android:id="@+id/tv_login"
                    style="@style/mine_login_text"
                    android:paddingEnd="5dp"
                    android:paddingStart="14dp"
                    android:text="@string/login"
                    android:visibility="@{viewModel.isLoggedIn()?View.GONE:View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@+id/civ_head"
                    app:layout_constraintStart_toEndOf="@+id/civ_head"
                    app:layout_constraintTop_toTopOf="@+id/civ_head" />

                <TextView
                    style="@style/mine_login_text"
                    android:text="/"
                    android:visibility="@{viewModel.isLoggedIn()?View.GONE:View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@+id/civ_head"
                    app:layout_constraintStart_toEndOf="@+id/tv_login"
                    app:layout_constraintTop_toTopOf="@+id/civ_head" />

                <TextView
                    android:id="@+id/tv_register"
                    style="@style/mine_login_text"
                    android:layout_marginStart="5dp"
                    android:paddingEnd="14dp"
                    android:paddingStart="5dp"
                    android:text="@string/register"
                    android:visibility="@{viewModel.isLoggedIn()?View.GONE:View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="@+id/civ_head"
                    app:layout_constraintStart_toEndOf="@+id/tv_login"
                    app:layout_constraintTop_toTopOf="@+id/civ_head" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="11dp"
                    android:singleLine="true"
                    android:textColor="@color/black_212222"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:visibility="@{viewModel.isLoggedIn()?View.VISIBLE:View.GONE}"
                    app:layout_constraintBottom_toTopOf="@+id/tv_company"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/civ_head"
                    app:layout_constraintTop_toTopOf="@+id/civ_head"
                    tools:text="15021676796" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_marginStart="11dp"
                    android:singleLine="true"
                    android:textColor="@color/black_212222"
                    android:textSize="14dp"
                    android:visibility="@{viewModel.isLoggedIn()?View.VISIBLE:View.GONE}"
                    app:layout_constraintBottom_toBottomOf="@+id/civ_head"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/civ_head"
                    app:layout_constraintTop_toBottomOf="@+id/tv_phone"
                    tools:text="所属公司" />

                <com.highlands.common.view.CircleImageView
                    android:id="@+id/civ_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_vip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/base_shape"
                android:paddingBottom="30dp"
                android:paddingEnd="21dp"
                android:paddingStart="18dp"
                android:paddingTop="15dp"
                android:visibility="@{viewModel.isPaid()?View.VISIBLE:View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_head">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIP"
                    android:textColor="#9B6100"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_vip"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_vip" />

                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:text="豪华会员2020-10-14到期"
                    android:textColor="#9B6100"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_renew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/renew"
                    android:textColor="#9B6100"
                    android:textSize="14dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_vip"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_vip" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_middle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="59dp"
                android:background="@drawable/base_shape"
                android:paddingBottom="13dp"
                android:paddingEnd="12dp"
                android:paddingStart="10dp"
                android:paddingTop="13dp"
                app:layout_constraintBottom_toTopOf="@+id/cl_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_head">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_collect"
                    style="@style/mine_collect_constraint"
                    android:layout_marginStart="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cl_focus"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        style="@style/mine_collect_linear"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            style="@style/mine_collect_image"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            style="@style/mine_collect_text"
                            android:text="@string/my_favorites" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_focus"
                    style="@style/mine_collect_constraint"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cl_comment"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/cl_collect"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        style="@style/mine_collect_linear"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            style="@style/mine_collect_image"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            style="@style/mine_collect_text"
                            android:text="@string/my_concerns" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_comment"
                    style="@style/mine_collect_constraint"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cl_support"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/cl_focus"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        style="@style/mine_collect_linear"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            style="@style/mine_collect_image"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            style="@style/mine_collect_text"
                            android:text="@string/my_opinion" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_support"
                    style="@style/mine_collect_constraint"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintStart_toEndOf="@+id/cl_comment"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        style="@style/mine_collect_linear"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            style="@style/mine_collect_image"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            style="@style/mine_collect_text"
                            android:text="@string/my_compliments" />
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_bottom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/base_shape"
                android:paddingEnd="15dp"
                android:paddingStart="19dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_middle">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:text="@string/more_service"
                    android:textColor="@color/black_212222"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_chat"
                    style="@style/mine_bottom_text"
                    android:layout_marginTop="50dp"
                    android:text="@string/my_group_chat"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_mail"
                    style="@style/mine_bottom_text"
                    android:text="@string/mails"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_chat" />

                <TextView
                    android:id="@+id/tv_history"
                    style="@style/mine_bottom_text"
                    android:text="@string/history"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mail" />

                <TextView
                    android:id="@+id/tv_cus_service"
                    style="@style/mine_bottom_text"
                    android:text="@string/custom_service"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_history" />

                <TextView
                    android:id="@+id/tv_logout"
                    style="@style/mine_bottom_text"
                    android:text="@string/logout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cus_service" />

                <View
                    style="@style/mine_view_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_chat" />

                <View
                    style="@style/mine_view_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mail" />

                <View
                    style="@style/mine_view_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_history" />

                <View
                    style="@style/mine_view_line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cus_service" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <data>

        <import type="com.highlands.mine.MineViewModel" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="MineViewModel" />
    </data>
</layout>
