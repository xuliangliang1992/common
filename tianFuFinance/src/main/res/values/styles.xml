<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="home_linear">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">168dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="home_title">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#FF061436</item>
        <!--        <item name="android:typeface">@string/pf_bold</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="home_sub_title">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#FF444444</item>
        <!--        <item name="android:typeface">@{@string/pf_bold}</item>-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
