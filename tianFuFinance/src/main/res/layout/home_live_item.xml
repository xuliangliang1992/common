<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/base_shape"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_live"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:scaleType="fitXY"
                android:src="@drawable/live_cover"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_live_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="54dp"
                android:lineHeight="27dp"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_live_name"
                app:layout_constraintEnd_toEndOf="@+id/iv_live"
                app:layout_constraintStart_toStartOf="@+id/iv_live"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@{StringUtil.emptyIs(model.getTitle())}"
                tools:text="变幻的趋势：踩准节奏，指导投资的5大方法论解析" />

            <TextView
                android:id="@+id/tv_live_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="13dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:text="@{StringUtil.emptyIs(model.getLecturerInfo().getName())}"
                app:layout_constraintBottom_toTopOf="@id/tv_notice"
                app:layout_constraintStart_toEndOf="@+id/iv_live_head"
                app:layout_constraintTop_toBottomOf="@id/tv_live_title"
                tools:text="傅瑾" />

            <TextView
                android:id="@+id/tv_live_certificate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_live_name"
                app:layout_constraintEnd_toEndOf="@+id/tv_live_title"
                app:layout_constraintStart_toEndOf="@+id/tv_live_name"
                app:layout_constraintTop_toTopOf="@+id/tv_live_name"
                android:text="@{StringUtil.emptyIs(model.getLecturerInfo().getProfile())}"
                tools:text="中国注册会计师证、中国注册税务师证" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@drawable/base_shape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/iv_live"
                app:layout_constraintStart_toStartOf="@+id/iv_live" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="直播时间"
                android:textColor="@color/black_061436"
                android:textSize="14dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_notice"
                app:layout_constraintStart_toStartOf="@+id/tv_live_title"
                app:layout_constraintTop_toTopOf="@+id/tv_notice" />

            <TextView
                android:id="@+id/tv_live_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/black_061436"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_notice"
                app:layout_constraintEnd_toStartOf="@+id/tv_notice"
                app:layout_constraintStart_toStartOf="@+id/tv_live_title"
                android:text="@{StringUtil.emptyIs(model.getUpdateAt())}"
                tools:text="2020年10月12日 18:00-20:00" />

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="38dp"
                android:background="@drawable/base_shape"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingEnd="14dp"
                android:paddingStart="15dp"
                android:text="提醒我"
                android:textColor="@color/white"
                android:textSize="14dp"
                app:drawableStartCompat="@drawable/live_time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/iv_live"
                app:layout_constraintTop_toBottomOf="@+id/tv_live_name" />

            <com.highlands.common.view.CircleImageView
                android:id="@+id/iv_live_head"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_live_name"
                app:layout_constraintStart_toStartOf="@+id/tv_live_title"
                app:layout_constraintTop_toTopOf="@+id/tv_live_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="98dp"
            android:layout_height="30dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/live_label"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:text="直播预告"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="serif"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>
        <import type="com.highlands.common.util.StringUtil" />

        <variable
            name="model"
            type="com.highlands.common.http.response.LiveBean" />
    </data>
</layout>