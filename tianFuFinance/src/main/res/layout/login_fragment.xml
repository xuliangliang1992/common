<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="SpUsage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/tv_code_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="验证码登录"
            android:textColor="@{viewModel.isCodeLogin()?@color/blue_709AFF:@color/gray_788196}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_account_login"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="35dp"
            android:paddingBottom="25dp"
            android:paddingTop="25dp"
            android:text="账号密码登录"
            android:textColor="@{viewModel.isCodeLogin()?@color/gray_788196:@color/blue_709AFF}"
            app:layout_constraintBottom_toBottomOf="@id/tv_code_login"
            app:layout_constraintStart_toEndOf="@+id/tv_code_login"
            app:layout_constraintTop_toTopOf="@id/tv_code_login" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="58dp"
            android:background="@drawable/base_shape"
            android:gravity="center"
            android:padding="17dp"
            android:text="登录"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:gravity="end"
            android:text="暂无账号,"
            android:textColor="@color/black_1B1E24"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_register"
            app:layout_constraintEnd_toStartOf="@+id/tv_register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_register"
             />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:paddingBottom="18dp"
            android:paddingTop="18dp"
            android:text="@string/to_register"
            android:textColor="#3974FF"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text"
            app:layout_constraintTop_toBottomOf="@+id/tv_login" />

        <com.highlands.common.view.CountDownTextView
            android:id="@+id/tv_code"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:background="@drawable/base_shape"
            android:gravity="center"
            android:paddingBottom="11dp"
            android:paddingEnd="21dp"
            android:paddingStart="21dp"
            android:paddingTop="11dp"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:visibility="@{viewModel.isCodeLogin()?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/lv_code"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.highlands.tianFuFinance.view.LoginEditView
            android:id="@+id/lv_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:edit_hint="请输入账号"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_code_login"
            app:title_text="账户名" />

        <com.highlands.tianFuFinance.view.LoginEditView
            android:id="@+id/lv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:visibility="@{viewModel.isCodeLogin()?View.GONE:View.VISIBLE}"
            app:edit_hint="请输入密码"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lv_account"
            app:title_text="登录密码" />

        <com.highlands.tianFuFinance.view.LoginEditView
            android:id="@+id/lv_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="18dp"
            android:visibility="@{viewModel.isCodeLogin()?View.VISIBLE:View.GONE}"
            app:edit_hint="请输入验证码"
            app:layout_constraintEnd_toStartOf="@+id/tv_code"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lv_account"
            app:title_text="验证码" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <import type="com.highlands.tianFuFinance.fun.login.LoginViewModel" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="LoginViewModel" />
    </data>
</layout>
